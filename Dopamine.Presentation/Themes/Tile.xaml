<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:Dopamine.Presentation.Controls">

  <Style x:Key="{x:Type controls:Tile}" TargetType="{x:Type controls:Tile}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type controls:Tile}">
          <Grid>
            <Border
              x:Name="PART_Tile"
              Width="{TemplateBinding Width}"
              Height="{TemplateBinding Height}"
              Panel.ZIndex="0"
              Background="{TemplateBinding Background}"
              BorderThickness="0" />
            <Label
              x:Name="PART_Icon"
              Height="{Binding IconSize, RelativeSource={RelativeSource TemplatedParent}}"
              Padding="0"
              HorizontalContentAlignment="Center"
              VerticalContentAlignment="Center"
              Panel.ZIndex="1"
              Content="{TemplateBinding Content}" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
