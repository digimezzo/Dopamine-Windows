<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="ListBoxSemanticZoomItem" TargetType="{x:Type ListBoxItem}">
    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
    <Setter Property="Foreground" Value="{DynamicResource RG_ForegroundBrush}" />
    <Setter Property="Margin" Value="8" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ListBoxItem}">
          <ContentPresenter />
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="ListBoxSemanticZoom" TargetType="{x:Type ListBox}">
    <Setter Property="Padding" Value="15" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="ItemContainerStyle" Value="{DynamicResource ListBoxSemanticZoomItem}" />
    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden" />
    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden" />
    <Setter Property="ItemsPanel">
      <Setter.Value>
        <ItemsPanelTemplate>
          <UniformGrid Columns="4" Rows="7" />
        </ItemsPanelTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="ItemTemplate">
      <Setter.Value>
        <DataTemplate>
          <Border>
            <Button
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Command="{Binding DataContext.SemanticJumpCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
              CommandParameter="{Binding Header}"
              Cursor="Hand"
              Style="{DynamicResource TransparentButton}">
              <Grid
                Width="34"
                Height="34"
                HorizontalAlignment="Left">
                <Viewbox
                  Width="34"
                  Height="34"
                  Panel.ZIndex="0">
                  <Path
                    x:Name="Droplet"
                    Data="{DynamicResource Droplet}"
                    Fill="{DynamicResource RG_AccentBrush}" />
                </Viewbox>
                <Label
                  Margin="0,-2,0,0"
                  Padding="0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Panel.ZIndex="1"
                  Content="{Binding Header}"
                  FontSize="18"
                  Foreground="{DynamicResource RG_WhiteBrush}" />
              </Grid>
            </Button>
          </Border>
          <DataTemplate.Triggers>
            <DataTrigger Binding="{Binding CanZoom}" Value="False">
              <Setter Property="Opacity" Value="0.2" />
              <Setter Property="Cursor" Value="Arrow" />
              <Setter Property="IsHitTestVisible" Value="False" />
            </DataTrigger>
          </DataTemplate.Triggers>
        </DataTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>
